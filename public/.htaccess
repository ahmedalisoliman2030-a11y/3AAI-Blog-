<IfModule mod_headers.c>
    # إعدادات الأمان (CSP) - السماح لـ Decap CMS بالعمل
    # لاحظ إضافة 'unsafe-eval' و 'unsafe-inline' الضرورية لعمل اللوحة
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://giscus.app https://identity.netlify.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://giscus.app; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://giscus.app https://api.github.com https://dawen.3aai.in blob:; frame-src 'self' https://giscus.app; object-src 'none'; base-uri 'self'; form-action 'self';"
    
    # إعدادات إضافية للأمان
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# تفعيل إعادة الكتابة (Rewrite Engine) ليعمل التوجيه في Astro بشكل صحيح
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>
