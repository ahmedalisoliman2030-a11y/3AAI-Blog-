# جعل ملفات PHP هي الأولوية في التشغيل
DirectoryIndex index.php index.html

# تعريف أنواع ملفات YAML
AddType text/yaml .yml
AddType text/yaml .yaml

<IfModule mod_headers.c>
    # سياسات الأمان (CSP)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://giscus.app; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://giscus.app; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://giscus.app https://api.github.com https://dawen.3aai.in https://raw.githubusercontent.com https://unpkg.com blob:; frame-src 'self' https://giscus.app; object-src 'none'; base-uri 'self'; form-action 'self';"
    
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ⚠️ هام جداً: استثناء مجلد oauth من توجيهات Astro
    # هذا السطر يمنع السيرفر من تحويل رابط المصادقة إلى صفحة المدونة
    RewriteRule ^oauth($|/) - [L]

    # توجيه Astro المعتاد
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>
