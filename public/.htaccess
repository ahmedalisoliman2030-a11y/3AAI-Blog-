<IfModule mod_headers.c>
    # إعدادات الأمان (CSP) محدثة
    # تم إضافة raw.githubusercontent.com للسماح بجلب المحتوى الخام
    # تم توسيع صلاحيات الصور (img-src) لتشمل أي رابط https (لصور المقالات الخارجية)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://giscus.app; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://giscus.app; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://giscus.app https://api.github.com https://dawen.3aai.in https://raw.githubusercontent.com blob:; frame-src 'self' https://giscus.app; object-src 'none'; base-uri 'self'; form-action 'self';"
    
    # باقي إعدادات الأمان
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# إعدادات التوجيه (Routing)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>
