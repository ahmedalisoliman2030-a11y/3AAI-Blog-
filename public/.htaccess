# Apache Configuration for Astro Static Site
# Optimized for Traditional Hosting (cPanel/Hostinger/Namecheap)

# Default directory index files
DirectoryIndex index.html index.php

# MIME Types
<IfModule mod_mime.c>
    AddType text/yaml .yml
    AddType text/yaml .yaml
    AddType application/json .json
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Content Security Policy - Balanced for functionality
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' blob:; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"
    
    # Additional security headers
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# URL Rewriting for Clean URLs and Astro Routing
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # If the request is for an existing file, serve it
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # If the request is for an existing directory, serve it
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Add trailing slash to directories (important for Astro)
    # This converts /contact to /contact/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !(.*)/$
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI}/ -d
    RewriteRule ^(.*)$ $1/ [L,R=301]
    
    # If a directory with index.html exists, serve the index.html
    # This converts /contact/ to /contact/index.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}/index.html -f
    RewriteRule ^(.*)/?$ $1/index.html [L]
</IfModule>

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    
    # HTML (don't cache too long)
    ExpiresByType text/html "access plus 1 week"
</IfModule>

# Error documents
ErrorDocument 404 /404.html
