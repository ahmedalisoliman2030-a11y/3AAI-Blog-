---
import { siteConfig } from "../config/site";
import { getCurrentYear } from "../utils/date";
import navigationData from "../data/navigation.json";
import socialData from "../data/social.json";

const currentYear = getCurrentYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- About Section -->
      <div class="footer-section">
        <h3 class="footer-title">{siteConfig.footer.about.title}</h3>
        <p class="footer-text">{siteConfig.footer.about.description}</p>
      </div>

      <!-- Links Section -->
      <div class="footer-section">
        <h3 class="footer-title">روابط مهمة</h3>
        <ul class="footer-links">
          {
            navigationData.footer.map((link) => (
              <li>
                <a href={link.href} class="footer-link">
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social Section -->
      <div class="footer-section">
        <h3 class="footer-title">تابعنا</h3>
        <div class="social-links">
          {
            socialData.social_links.map((social) => (
              <a
                href={social.url}
                class="social-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={social.platform}
              >
                {social.platform === "twitter" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
                  </svg>
                )}
                {social.platform === "github" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                )}
                {social.platform === "linkedin" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="copyright">
        {siteConfig.footer.copyright} © {currentYear}
        {siteConfig.title}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: 3rem 0 1.5rem;
    margin-top: 4rem;
    transition:
      background-color var(--transition-normal),
      border-color var(--transition-normal);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .footer-text {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text-secondary);
    background-color: var(--color-surface-hover);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    color: var(--color-primary);
    background-color: var(--color-border);
    transform: translateY(-2px);
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .copyright {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 2rem 0 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
