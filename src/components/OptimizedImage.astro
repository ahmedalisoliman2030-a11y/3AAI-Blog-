---
import { isExternalImage, validateAltText } from "../utils/image";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: "lazy" | "eager";
}

const {
  src,
  alt,
  width,
  height,
  class: className,
  loading = "lazy",
} = Astro.props;

// التحقق من وجود نص بديل
if (!validateAltText(alt)) {
  console.warn(`تحذير: الصورة ${src} لا تحتوي على نص بديل (alt text)`);
}

// تحديد ما إذا كانت الصورة محلية أو خارجية
const isExternal = isExternalImage(src);
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  decoding="async"
/>
