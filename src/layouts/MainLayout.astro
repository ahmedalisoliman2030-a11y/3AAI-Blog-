---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BackToTop from "../components/BackToTop.astro";

// تعريف الخصائص التي يقبلها المكون
interface Props {
  title?: string; // عنوان الصفحة
  description?: string; // وصف الصفحة (SEO)
  image?: string; // صورة للمشاركة (Open Graph)
  article?: boolean; // هل الصفحة عبارة عن مقال؟ (لتنسيق SEO)
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <div class="site-wrapper">
    <!-- الهيدر: يحتوي على الشعار والقائمة العلوية -->
    <Header />

    <!-- المحتوى الرئيسي: يتغير حسب الصفحة -->
    <main class="main-content">
      <slot />
    </main>

    <!-- الفوتر: يحتوي على الروابط ومعلومات الحقوق -->
    <Footer />

    <!-- زر العودة للأعلى -->
    <BackToTop />
  </div>
</BaseLayout>

<style>
  .site-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    padding: 2rem 0;
  }

  @media (max-width: 768px) {
    .main-content {
      padding: 1.5rem 0;
    }
  }
</style>
